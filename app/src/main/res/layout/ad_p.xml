<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fitsSystemWindows="true"
		android:id="@+id/mainAppBarLayout2">
		<android.support.design.widget.TabLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#ffffff"
			android:scrollbars="horizontal"
			app:tabTextColor="#ABABAB"
			app:tabSelectedTextColor="#5A5A5A"
			app:tabIndicatorColor="#5A5A5A"
			app:tabMode="fixed"
			app:tabGravity="fill"
			app:tabPaddingStart="8dp"
			app:tabPaddingEnd="8dp"
			android:layout_below="@+id/mainToolbar1"
			android:id="@+id/mainTabLayout1"/>

	</android.support.design.widget.AppBarLayout>

	<com.alcatraz.support.v4.appcompat.ViewPagerMin
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/mainViewPagerMin1"/>
</LinearLayout>
